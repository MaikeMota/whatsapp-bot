{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2021",
        "sourceMap": true,
        "outDir": "dist",
        "allowJs": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
        
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}